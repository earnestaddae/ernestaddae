 <div class="container my-4 border rounded">
  <div class="row my-3">
    <div class="col-xs-12 col-sm-4 col-md-3 align-self-center">
      <%= link_to category_path(category) do %>
        <%= image_tag("https://www.dropbox.com/s/ct1tog1jlao40ff/banner.png?dl=1", class: "rounded img-fluid w-100 mb-0") %>
      <% end %>
    </div>
    <div class="col">
      <div class="mt-3 d-md-none"></div>
      <p class="small text-muted mb-0"><strong> <%= fa_icon("list") %> Category</strong></p>
      <%= link_to category_path(category), class: "stretched-link card-link" do %>
        <h2 class="m-0 h3"><%= category.name %></h2>
      <% end %>
      <p class="m-0 text-muted small"><%= category.description %></p>
    </div>
  </div>
</div>
