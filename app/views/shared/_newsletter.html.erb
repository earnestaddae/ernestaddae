<!-- Modal -->
<div class="modal fade" id="modal-newsletter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
          <p class="modal-title text-muted text-center mb-0 mt-2" id="exampleModalLongTitle">Join the Earnest Ruby Community Newsletter</p>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
       <%= render "newsletters/form", newsletter: Newsletter.new %>
      </div>
    </div>
  </div>
</div>
