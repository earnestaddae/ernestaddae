<aside class="col-md-7 col-lg-4 order-first order-lg-last">
      <div class="sidebar-sticky">
        <div class="d-flex align-items-center mb-3">
          <%= link_to search_index_path, title: "Search", class: "js-search-form-submit position-absolute" do %>
            <i class="fa fa-search fa-fw text-muted pl-2"></i>
          <% end %>
          <!-- <i class="fa fa-search fa-fw text-muted position-absolute pl-2"></i> -->
          <%= form_with url: search_index_path, method: :get do |form| %>
            <%= form.text_field :query, placeholder: "Search", class: "form-control form-control-lg", style: "padding-left: 2rem; padding-right: 2rem;" %>
          <% end %>
          <!-- <input autofocus="autofocus" type="input" placeholder="Search" maxlength="50" class="form-control form-control-md" style="padding-left: 2rem; padding-right: 2rem;"> -->
          <!-- <i hidden="hidden" title="Clear search query" class="fa fa-close text-muted pr-2 search-field-clear-icon"></i> -->
        </div>

        <h5 class="mb-2">All Categories</h5>
        <% @categories.each do |category| %>
          <% if category.articles.any? %>
          <p class="mb-0">
            <strong>
              <%= link_to category_path(category), class: "card-link text-primary" do %>
                <i class="fa fa-list text-success"></i> <%= category.name %>
              <% end %>
            </strong>
          </p>
          <% end %>
        <% end %>

        <div class="mt-3"></div>

        <h5 class="mb-3">All Skills Level</h5>
        <% @levels.each do |level| %>
          <% if level.articles.any? %>
          <p class="mb-0">
            <strong>
              <%= link_to level_path(level), class: "card-link text-primary" do %>
                <i class="fa fa-angle-double-up text-warning"></i> <%= level.name %>
              <% end %>
            </strong>
          </p>
          <% end %>
        <% end %>

        <div class="mt-3"></div>

        <h5 class="mb-3">Your Favorite</h5>
        <p class="mb-0">
          <strong>
            <%= link_to likes_path, class: "card-link text-primary" do %>
              <i class="fa fa-fw fa-heart text-danger"></i> Liked
            <% end %>
          </strong>
        </p>

        <p class="mb-0">
          <strong>
            <%= link_to marks_path, class: "card-link text-primary" do %>
              <i class="fa fa-fw fa-check text-success"></i> Completed
            <% end %>
          </strong>
        </p>

         <p class="mb-0">
          <strong>
            <%= link_to bookmarks_path, class: "card-link text-primary" do %>
              <i class="fa fa-fw fa-bookmark text-info"></i> Bookmarks
            <% end %>
          </strong>
        </p>

      </div>
    </aside>
