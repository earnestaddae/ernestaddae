<div class="container mt-4">
  <div class="row">
    <div class="col-lg-8 col-12">
      <h1 class="font-weight-bold text-capitalize">Tutorials tagged: "<%= @tag.name %>"</h1>

      <div class="row">
        <% @tag.articles.published.each do |article| %>
        <div class="col-12 col-md-6 col-lg-6 mb-5">
          <%= render article %>
        </div>
        <% end %>
      </div>
    </div>

    <div class="col-lg-4 col-12">
      <%= render "shared/index_sidebar" %>
    </div>
  </div>
</div>


