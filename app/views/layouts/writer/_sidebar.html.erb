<!-- Main Sidebar Container -->
<aside class="main-sidebar sidebar-light-primary elevation-4">
  <!-- Brand Logo -->
  <a href="<%= writer_root_path %>" class="brand-link">

    <img src="https://upload.wikimedia.org/wikipedia/commons/7/73/Ruby_logo.svg" alt="Earnest Ruby" class="brand-image img-circle elevation-3" style="opacity: .8">
    <span class="brand-text font-weight-light">Earnest Ruby</span>
  </a>

  <!-- Sidebar -->
  <div class="sidebar">
    <!-- Sidebar user panel (optional) -->
    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
      <div class="image">
        <%= gravatar_image_tag(current_user.email, :alt => current_user, class: "img-circle elevation-2") %>
      </div>
      <div class="info">
        <a href="<%= writer_root_path %>" class="d-block"><%= current_user&.full_name %></a>
      </div>
    </div>

    <!-- SidebarSearch Form -->
    <%#= render "layouts/writer/sidebar_search_form" %>

    <!-- Sidebar Menu -->
    <nav class="mt-2">
      <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
        <!-- Add icons to the links using the .nav-icon class
             with font-awesome or any other icon font library -->
        <li class="nav-item menu-open">
          <a href="#" class="nav-link active">
            <i class="nav-icon fas fa-tachometer-alt"></i>
            <p>
              Dashboard
              <i class="right fas fa-angle-left"></i>
            </p>
          </a>
          <ul class="nav nav-treeview">
            <li class="nav-item">
              <a href="<%= writer_root_path %>" class="nav-link">
                <i class="far fa-file-alt nav-icon text-muted"></i>
                <p class="text-dark">
                  Tutorials
                  <span class="right badge badge-info"><%= current_user.authored_articles.count %></span>
                </p>
              </a>
            </li>
            <li class="nav-item">
              <a href="#" class="nav-link">
                <i class="fas fa-users nav-icon text-muted"></i>
                <p class="text-dark">
                  Subscribers
                <span class="right badge badge-success"><%= current_user.subscriptions.count %></span>
                </p>
              </a>
            </li>
          </ul>
        </li>
        <li class="nav-item">
          <a href="<%= new_writer_article_path %>" class="nav-link">
            <i class="nav-icon fas far fa-edit text-muted"></i>
            <p>
              Write a Tutorial
              <span class="right badge badge-danger">New</span>
            </p>
          </a>
        </li>
        <li class="nav-item">
          <a href="#" class="nav-link">
            <i class="nav-icon fas fa-cogs text-muted"></i>
            <p>
              Settings
              <i class="fas fa-angle-left right"></i>
            </p>
          </a>
          <ul class="nav nav-treeview">
            <% if current_user.profile.present? %>
              <li class="nav-item">
                <%= link_to edit_writer_profile_path, class: "nav-link" do  %>
                  <i class="fas fa-user-edit nav-icon text-muted"></i>
                  <p>Edit Profile</p>
                <% end %>
              </li>
              <% else %>
              <li class="nav-item">
                <%= link_to new_writer_profile_path, class: "nav-link" do  %>
                  <i class="fas fa-user-plus nav-icon text-muted"></i>
                  <p>Create Profile</p>
                <% end %>
              </li>
            <% end %>
            <li class="nav-item">
              <%= link_to account_root_path, class: "nav-link" do  %>
                <i class="fas fa-sliders-h nav-icon text-muted"></i>
                <p>Manage Account</p>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to edit_user_registration_path, class: "nav-link" do %>
                <i class="fas fa-shield-alt nav-icon text-muted"></i>
                <p>Change Password</p>
              <% end %>
            </li>
          </ul>
          </li>
      </ul>
    </nav>
    <!-- /.sidebar-menu -->
  </div>
  <!-- /.sidebar -->
</aside>
