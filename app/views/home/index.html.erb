<div class="container">
  <div class="row">
    <div class="col-lg-8 col-12">
      <div class="row">
        <div class="col-12">
           <h1 class="display-3 mb-2">Articles</h1>
        </div>
        <div class="col-12 mb-3">
          <% if @featured.present? %>
            <%= render "shared/featured_tutorial", featured: @featured %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-lg-4 col-12">
      <%= render "shared/index_sidebar" %>
    </div>

    <%# <div class="col-12 px-0"> %>
      <%#= render "shared/start_here" %>
    <%# </div> %>

    <div class="col-12">
      <%= render "shared/current_user_index" %>
    </div>

    <div class="col-12 mb-4">
      <%= render "shared/search_form" %>
    </div>

    <% @articles.each do |article| %>
    <div class="col-12 col-md-6 col-lg-4 mb-5">
      <%= render article %>
    </div>
    <% end %>

  </div>
</div>
