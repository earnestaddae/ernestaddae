<div class="container mt-4 mb-4">
  <div class="row">
    <div class="col-lg-8 offset-lg-2 col-sm-12">
      <div class="card">
        <div class="card-header">
          <h2 class="font-weight-bold text-center">Sign up</h2>
        </div>
        <div class="card-body p-4">
          <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), label_errors: true) do |f| %>
              <%#= render "devise/shared/error_messages", resource: resource %>
              <%= f.text_field :username, autofocus: true, autocomplete: "username" %>
              <%= f.email_field :email, autocomplete: "email" %>
              <%= f.password_field :password, autocomplete: "new-password", help: "#{@minimum_password_length if @minimum_password_length } characters minimum"  %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>


              <!-- recaptcha tag -->
            <%= flash[:recaptcha_error] %>
            <%#= recaptcha_tags %>
            <br>

              <%= f.primary "Sign up" %>
          <% end %>
        </div>
        <div class="card-footer">
          <%= render "devise/shared/links" %>
        </div>

      </div>
    </div>
  </div>
</div>




