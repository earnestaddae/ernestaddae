<div class="container mt-4 mb-4">
  <div class="row">
    <div class="col-lg-8 offset-lg-2 col-sm-12">
      <div class="card">
        <div class="card-header">
          <h2 class="font-weight-bold text-center">Forgot your password?</h2>
        </div>
          <div class="card-body">
          <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%#= render "devise/shared/error_messages", resource: resource %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>

            <!-- recaptcha tag -->
            <%= flash[:recaptcha_error] %>
            <%#= recaptcha_tags %>
            <br>

              <%= f.primary "Send me reset password instructions" %>
          <% end %>
        </div>
        <div class="card-footer">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>



