<div class="border rounded p-3 mb-3 border-dark">
  <div class="container">
    <div class="row">
      <div class="col-2 col-md-1 p-0 align-self-center">
        <%= gravatar_image_tag(comment&.author&.email, :alt => current_user, class: "align-self-center rounded-circle img-fluid w-100 my-0") %>
      </div>
      <div class="col pr-0 d-flex align-items-center">
       <p class="my-0">
        <strong><%= comment&.author %></strong>
        <span class="text-muted"> <%= time_ago_in_words(comment.created_at) %> ago</span>
      </p>
      </div>
    </div>
    <div class="mt-3 comment-body">
      <p><%= markdown(comment.body) %></p>
    </div>
  </div>
</div>






